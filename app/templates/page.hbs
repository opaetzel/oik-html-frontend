{{top-menu}}
<div data-spy="affix" data-offset-top="100" id="affix-left">
		<canvas width="15" height="120"></canvas>
	</div>
    <div class="container" id="main-container">
        {{#each model.page.rows as |row|}}
		<div class="row equal margin-row">
            <div class="col-md-6 {{row.left_style_classes}}">
                {{#if (idValid row.leftImage)}}
                    <a href="{{currentUrl "bla"}}#lb-{{row.leftImage}}">
                    {{auth-image imageSrc="/api/get-image/${id}" imageId=row.leftImage styleClasses="full-width-image"}}
                    </a>
                    <div class="lightbox" id="lb-{{row.leftImage}}">
                            {{auth-image imageSrc="/api/get-image/${id}" imageId=row.leftImage}}
                            <div>Embed text here</div>
                        <a class="lightbox-close" href="{{currentUrl "b"}}#_"></a>
                    </div>
                {{else}}
                    {{oik-md text=row.left_markdown image=row.leftImage}}
                {{/if}}
			</div>
            <div class="col-md-6 {{row.right_style_classes}}">
                {{#if (idValid row.rightImage)}}
                    <a href="{{currentUrl "bla"}}#lb-{{row.rightImage}}">
                    {{auth-image imageSrc="/api/get-image/${id}" imageId=row.rightImage styleClasses="full-width-image"}}
                    </a>
                    <a href="{{currentUrl "b"}}#_" class="lightbox" id="lb-{{row.rightImage}}">
                        {{auth-image imageSrc="/api/get-image/${id}" imageId=row.rightImage}}
                    </a>
                {{else}}
                    {{oik-md text=row.right_markdown image=row.rightImage}}
                {{/if}}
			</div>
        </div>
        {{/each}}
</div>
{{outlet}}
